#!/usr/bin/env ruby

require_relative '../config/environment'

require 'pry'

input = ""

puts "Welcome to Tic Tac Toe!"
puts "How many players? 0, 1, or 2?"

input = gets.chomp

case input
    when "0"
    game = Game.new(Players::Computer.new("X"), Players::Computer.new("O"))
    until game.won?
    game.play
    end
    when "1"
    game = Game.new(Players::Human.new("X"), Players::Computer.new("O"))
    until game.won?
    game.play
    end
    when "2"
    game = Game.new
    until game.won?
    game.play
    end
  end


play_again = ""
puts "Would you like to play again? y or n"

  
  play_again = gets.strip.downcase
  
  case play_again
    when "n" 
    exit
    when "y" 
    puts "How many players? 0, 1, or 2?"

input = gets.chomp

case input
    when "0"
    game = Game.new(Players::Computer.new("X"), Players::Computer.new("O"))
    until game.won?
    game.play
    end
    when "1"
    game = Game.new(Players::Human.new("X"), Players::Computer.new("O"))
    until game.won?
    game.play
    end
    when "2"
    game = Game.new
    until game.won?
    game.play
    end


puts "Welcome to Tic Tac Toe!"
puts "How many players? 0, 1, or 2?"
input = ''
while input != 'n' || 'no'
input = gets.chomp.to_i
puts puts "To quit, type 'exit'."
case input
    when "0"
    Game.new(Players::Computer, Players::Computer)
    when "1"
    Game.new(Players::Human, Players::Computer)
    when "2"
    game = Game.new
  end
  end
until game.won?
  game.play
end

play_again = ""
until play_again.downcase == "n" || play_again.downcase == "no"
  puts "Would you like to play again?"
  play_again = gets.strip
  play_again.downcase == "y" || play_again.downcase == "yes"
  game = Game.new
  until game.won?
    game.play

  end
  end





